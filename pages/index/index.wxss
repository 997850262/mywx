/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.menu {
  display: flex;
  flex-direction: row;
  position: absolute;
  justify-content: space-between;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgb(238, 227, 227);
}
.btn{
  width: 33%;
  height: 100rpx;
  text-align: center;
  background-color: rgb(238, 227, 227);
}