  justify-content: flex-start;
}
.header{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.select{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 20rpx;
}
.oneselect{
  margin-left: 60rpx;
}
.moreselect{
  margin-left: 60rpx;
}
.selectone{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid black;
}
.selectmore{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
